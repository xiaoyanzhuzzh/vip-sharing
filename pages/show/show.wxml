<!--show.wxml-->
<scroll-view bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
  <view class="view-item">
    <image class="item-category-icon"></image>
    <text class="item-info">店名</text>
    <text class="item-info">持卡人</text>
    <text class="item-info">卡号</text>
  </view>
  <view class="view-item" wx:for="{{VIPInfos}}" wx:for-item="VIPInfo">
    <image class="item-category-icon" src="../../sources/images/{{VIPInfo.icon}}.png"></image>
    <text class="item-info">{{VIPInfo.shopName}}</text>
    <text class="item-info">{{VIPInfo.ownerName}}</text>
    <text class="item-info">{{VIPInfo.vipNumber}}</text>
  </view>
</scroll-view>