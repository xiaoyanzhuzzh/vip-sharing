view {
  margin:5rpx auto;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
}
.vip-infos{
  margin-top: 50rpx;
}

.view-item {
  background-color: #F7EDF0;
  padding-left:20rpx;
}

.item-category-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.item-info {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 25rpx;
  vertical-align: middle;
  font-size: 24rpx;
  width: 150rpx;
  display: inline-block;
  color:#330505;
}