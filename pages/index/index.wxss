/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
  font-size: 40rpx;
}

.usermotto {
  margin: 20rpx 40rpx;
  line-height: 1.5;
  font-size: 28rpx;
  padding: 10rpx;
}

.user-motto {
  display: block;
  text-align: center;
}

.buttons {
  width: 100%;
  margin: 100rpx auto 0;
}

.button {
  background-color: #F4ACB7;
  color: #ffffff;
  width: 80%;
  font-size: 30rpx;
  margin: 20rpx auto;
}