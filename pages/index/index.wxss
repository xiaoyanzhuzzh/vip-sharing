/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
}

.usermotto {
  margin: 10px 20px;
  line-height: 1.5;
  font-size: 11px;
  padding: 5px;
}

.user-motto {
  display: block;
  text-align: center;
}

.buttons {
  width: 100%;
  margin: 50px auto 0;
}

.button {
  background-color: #F4ACB7;
  color: #ffffff;
  width: 80%;
  font-size: 14px;
  margin: 10px auto;
}