.swiper-container {
  margin: auto;
  text-align: center;
}

.swiper-card {
  margin: 0 30rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
}

.swiper-card-left, .swiper-card-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  align-content: center;
  box-sizing: border-box;
}

.swiper-card-left {
  width: 40%;
  background-color: #E67985;
  color:#fff;
}

.swiper-card-right {
   width: 70%;
   color: #E67985;
   border: 1px solid #E67985;
 }

.swiper-text {
  display: block;
  margin: 20rpx auto;
}

.logo-img {
  height: 100rpx;
  width: 100rpx;
}