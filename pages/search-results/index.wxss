.swiper-container {
  margin: auto;
  text-align: center;
}
.search-results {
  background-color: #F5EBEB;
}
.vip-card {
  margin: 30rpx auto;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
}
.vip-card-left, .vip-card-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  align-content: center;
  box-sizing: border-box;
  font-size: 30rpx;
}
.vip-card-left {
  width: 40%;
  background-color: #E67985;
  color:#fff;
}
.vip-card-right {
   width: 70%;
   color: #E67985;
   border: 1px solid #E67985;
 }
.vip-card-text {
  display: block;
  margin: 10rpx auto;
}
.vip-card-right>.vip-card-text {
  color: #330505;
}
.logo-img {
  height: 100rpx;
  width: 100rpx;
}