.search {
  background-color: #F4ACB7;
  padding: 25rpx 25rpx 80rpx;
  margin-bottom: 60rpx;
}

.search-input {
  height: 80rpx;
  padding: 0 15rpx;
  background-color: #ffffff; 
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 15rpx;
  box-sizing: border-box;
}

.search-icon {
	width: 30rpx;
	height: 30rpx;
}

.search-text {
  margin-left: 10rpx;
  width: 100%;
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
}