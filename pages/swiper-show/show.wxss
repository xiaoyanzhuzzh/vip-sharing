.categories {
  height: 36px;
  width: 750rpx;
  background-color:#F2FFF9;
  display: flex;
  justify-content: space-around;
  font-size:30rpx;
}
.category {
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-selected {
  border-bottom: 2px solid #F4ACB7;
  color: #F4ACB7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 90rpx;
  color: white;
}

view {
  margin:5rpx auto;
}

.category-item{
  margin: 10rpx 20rpx;
  background-color: #FFCAD4;
  display: inline-block;
  text-align: center;
}

.vip-infos{
  margin-top: 50rpx;
}

.view-item {
  background-color: #F7EDF0;
  padding-left:20rpx;
}

.item-category-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.item-info {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 25rpx;
  vertical-align: middle;
  font-size: 24rpx;
  width: 150rpx;
  display: inline-block;
  color:#330505;
}