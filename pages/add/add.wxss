/* input.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
  font-size: 40rpx;
}

.input-item {
  margin-left: 10px;
  overflow: visible
}

.picker {
  margin-top: 10px;
}

.add-page {
  padding: 20px 20px;
}

.item-wrapper {
  margin-top: 15px;
  padding: 2px;
  border: 1px solid gray;
  border-radius: 4px;
}

.input-item-container {
  display: inline-block;
}

.btn-area {
  display: flex;
  margin-top: 15px;
}

.submit-button {
  background-color: #9d8189;
  width: 100%;
  font-size: 30rpx;
}

.category {
  width: 100%;
  height:1.4rem;
  display:inline-block;
  line-height:1.4rem;
}