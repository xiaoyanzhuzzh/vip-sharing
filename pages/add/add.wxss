.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
  font-size: 40rpx;
}

.card-name {
  margin-top: 10px;
  padding: 2px;
  border: 1px solid gray;
}

.card-number {
  margin-top: 10px;
  padding: 2px;
  border: 1px solid gray;
}

.picker {
  margin-top: 10px;
}

.add-page {
  padding: 20px 10px;
}

.item-wrapper {
  margin-bottom: 10px;
}

.btn-area {
  display: flex;
}

.submit-button {
  background-color: #9d8189;
