/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0 250rpx;
  box-sizing: border-box;
  background-color: #FFF7F7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 90rpx;
  color: white;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #FFCAD4;
}

.userinfo-nickname {
  color: #9D8189;
  font-size: 40rpx;
}
.tips {
  display: block;
  margin: 20rpx 30rpx 100rpx;
}

.search {
  background:linear-gradient(0deg, #E54E90 0%, #FF79B7 100%);
  padding: 25rpx 25rpx 80rpx;
  margin-bottom: 20rpx;
}

.search-input {
  height: 80rpx;
  padding: 0 15rpx;
  background-color: #ffffff; 
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 15rpx;
  box-sizing: border-box;
}

.search-icon {
	width: 30rpx;
	height: 30rpx;
}

.search-text {
  margin-left: 10rpx;
  width: 100%;
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
}
