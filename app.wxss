/**app.wxss**/
.page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 90rpx;
  color: white;
}
page {
  background-color: #F5EBEB;
}
 .container {
  position: relative; 
} 
.container-header {
  background: #E67985;
  padding: 25rpx 25rpx 180rpx;
  border: 1px solid #E67985;
  border-bottom-left-radius: 150rpx; 
  border-bottom-right-radius: 150rpx; 
  margin-bottom: 20rpx;
}
.container-body {
  border-radius: 25rpx; 
  position: absolute;  
  top: 115rpx;
  background-color: #fff;
  margin: 80rpx 60rpx 40rpx; 
}
.container-footer {
  position: absolute;    
  top: 1880rpx; 
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #E67985;
}
.userinfo-nickname {
  color: #9D8189;
  font-size: 40rpx;
}
.tips {
  display: block;
  margin: 20rpx 30rpx 100rpx;
}
.search-input {
  height: 80rpx;
  padding: 0 15rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 15rpx;
  box-sizing: border-box;
}

.search-icon {
	width: 30rpx;
	height: 30rpx;
}

.search-text {
  margin-left: 10rpx;
  width: 100%;
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
}
